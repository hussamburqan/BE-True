# ===== Core =====
DEBUG=1
SECRET_KEY=dev-secret-change-me
ALLOWED_HOSTS=localhost,127.0.0.1:8000
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1,http://localhost:3000,http://127.0.0.1:3000,http://localhost:4200,http://127.0.0.1:4200

# ===== CORS =====
CORS_ALLOW_ALL=1
CORS_ALLOW_CREDENTIALS=1
# بدلاً من السماح للكل يمكنك التحديد:
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:4200,http://127.0.0.1:4200

# ===== Frontend URL (للروابط داخل الردود) =====
FRONTEND_URL=http://localhost:3000

# ===== Database =====
# اترك DATABASE_URL فاضيًا لاستخدام SQLite محليًا.
# مثال إن أردت الربط مع PostgreSQL خارجي:
# DATABASE_URL=postgresql://true_l4m3_user:buUq9LM9nV0v03n0DBGVsC2hrONgJCm0@dpg-d2uovdjuibrs73ftdi2g-a.frankfurt-postgres.render.com/true_l4m3
# لو السيرفر لا يدعم SSL محليًا:
# DB_SSL_REQUIRE=0

# ===== Email (محليًا نطبع الرسائل بالكونسول) =====
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# إعدادات SMTP (اختياريًا إن أردت إرسالًا حقيقيًا):
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=1
# EMAIL_HOST_USER=your@gmail.com
# EMAIL_HOST_PASSWORD=your_app_password
# DEFAULT_FROM_EMAIL=your@gmail.com

# ===== DRF/JWT =====
ACCESS_TOKEN_LIFETIME_MIN=120
REFRESH_TOKEN_LIFETIME_DAYS=90
PAGE_SIZE=10

# ===== Locale/Time =====
LANGUAGE_CODE=en-us
TIME_ZONE=Asia/Hebron

# ===== Audit =====
AUDITLOG_RETENTION_DAYS=7

# ===== Logging =====
LOG_LEVEL=DEBUG

# ===== Security behind proxies (اتركها كما هي محليًا) =====
SECURE_SSL_REDIRECT=0
SESSION_COOKIE_SECURE=0
CSRF_COOKIE_SECURE=0
